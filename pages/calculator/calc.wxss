/* pages/calculator/calc.wxss */

.container {
  justify-content: flex-start;
  padding: 30rpx 0;
}

.container input {
  background-color: #eee;
  border-radius: 3px;
  text-align: left;
  width: 680rpx;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 20rpx;
  margin: 20rpx;
}

.container button {
  width: 80%;
}

.content {
  margin: 80rpx 60rpx;
  /* align-items: center;
 display: flex;
 flex-direction: column; */
}

.content button {
  width: 80%;
  /* align-content: center;
 align-items: center; */
}

.content view, .content button, .content slider {
  margin: 20rpx 0;
}

.calcContent {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  padding-top: 10rpx;
  padding-bottom: 80rpx;
}

.screen {
  background-color: #fff;
  text-align: right;
  width: 650rpx;
  height: 150rpx;
  line-height: 150rpx;
  padding: 0 20rpx;
  margin: 30rpx;
  border: 1px solid #ddd;
  border-radius: 3px;
}

.btnGroup {
  display: flex;
  flex-direction: row;
}

.btnGroup button {
  width: 160rpx;
  min-height: 150rpx;
  margin: 10rpx;
  border-radius: 6px;
  text-shadow: 0 1px 1px rgba(0, 0, 0, 0.3);
  text-align: center;
  line-height: 150rpx;
}

/* 控制按钮颜色（橙色） */

.orange {
  background-color: #f78d1d;
  color: #fef4e9;
  border: solid 1px #da7c0c;
}

.btnIcon {
  width: 60rpx;
  min-height: 50rpx;
  margin: 10rpx;
  border-radius: 6px;
  text-shadow: 0 1px 1px rgba(0, 0, 0, 0.3);
  text-align: center;
  background: pink;
  line-height: 50rpx;
